{
  "manifest_version": 3,
  "name": "LinguoAssist",
  "version": "1.0",
  "description": "An all-in-one dictionary extension for Chrome that provides instant word definitions across web-pages",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "notifications",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"]
}
